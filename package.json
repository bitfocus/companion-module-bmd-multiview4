{
	"name": "bmd-multiview4",
	"version": "2.0.0",
	"homepage": "https://github.com/bitfocus/companion-module-bmd-multiview4#readme",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"dev": "run build:main --watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.json",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"dist": "yarn companion-module-build"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"run prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"run lint:raw --fix"
		]
	},
	"dependencies": {
		"@companion-module/base": "~1.13.5"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.4.2",
		"eslint": "^9.39.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.3",
		"rimraf": "^6.1.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.48.0"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-bmd-multiview4.git"
	},
	"packageManager": "yarn@4.12.0"
}
